<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.profile.Profile">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#BBDBF4">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="380dp"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@drawable/side_nav_bar">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ppimage"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="40dp"
                android:src="@drawable/person"
                 />

            <TextView
                android:id="@+id/tvFullname"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Full Name"
                android:layout_marginTop="10dp"
                style="@style/TextName"/>

            <TextView
                android:id="@+id/tvUsertype"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="User Type"
                android:layout_marginTop="5dp"
                android:textColor="#D3D3D3"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tvBio"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center_horizontal"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:text="Bio"
                android:layout_marginTop="10dp"
                android:textColor="@color/white"
                style="@style/TextBlackTitle"/>

        </LinearLayout>

        <TextView
            android:id="@+id/tvcount"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="-37dp"
            android:layout_marginEnd="80dp"
            android:layout_marginStart="80dp"
            android:text="Total Course"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:textAllCaps="false"
            android:background="@drawable/custom_inputfield"/>
        <TextView
            android:id="@+id/tvcount2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="-84dp"
            android:layout_marginEnd="80dp"
            android:layout_marginStart="80dp"
            android:text="Total saved Course"
            android:visibility="invisible"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:textAllCaps="false"
            android:background="@color/white"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/person"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light"
                        android:text="Username"
                        style="@style/TextBlackTitle"/>

                    <TextView
                        android:id="@+id/tvUsername"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light"
                        android:text="Username"
                        style="@style/TextDescription"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="4dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/phone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light"
                        android:text="Phone"
                        style="@style/TextBlackTitle"/>

                    <TextView
                        android:id="@+id/tvPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light"
                        android:text="Phone"
                        style="@style/TextDescription"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="4dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/email"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light"
                        android:text="Email"
                        style="@style/TextBlackTitle"/>

                    <TextView
                        android:id="@+id/tvEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light"
                        android:text="Email"
                        style="@style/TextDescription"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="14dp">

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:padding="4dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/location"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light"
                        android:text="Address"
                        style="@style/TextBlackTitle"/>

                    <TextView
                        android:id="@+id/tvAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/light"
                        android:text="Address"
                        style="@style/TextDescription"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/editprofile"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="25dp"
                android:text="Edit Profile"
                android:textSize="18sp"
                android:gravity="center"
                android:textAllCaps="false"
                android:background="@drawable/login_btn"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>