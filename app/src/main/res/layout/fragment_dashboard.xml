<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.fragments.home.Dashboard">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TextView
        android:id="@+id/textdashboard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome back\nfullname!"
        android:textColor="#000000"
        android:background="@drawable/custom_inputfield"
        android:textSize="35sp"
        android:gravity="center"
        android:textStyle="bold"
        android:fontFamily="sans-serif-black"
        android:letterSpacing="0.04"
        android:layout_marginTop="20dp"
        android:layout_margin="10dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@drawable/custom_inputfield"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search for Course"
                android:textColor="#305f72"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="0.04"
                android:layout_marginLeft="20dp"/>

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/search_icon"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/top_card"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="10dp"
            android:padding="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Start Learning \nwith eKnowledge"
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="sans-serif-black"
                android:letterSpacing="0.035"/>

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:background="@drawable/search_bg"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Categories"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="sans-serif-black"
                    android:layout_marginLeft="35dp"/>

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/button_arrow"
                    android:layout_marginLeft="20dp"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Our Courses"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/black"
            android:letterSpacing="0.04"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#CBFADF"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/imgAndroid"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/android"/>

                    <TextView
                        android:id="@+id/textAndroid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Android Development"
                        android:layout_toRightOf="@+id/imgAndroid"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:letterSpacing="0.03"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/txtDesc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Meet the OS thatâ€™s optimised for how you use your phone. Helping you to manage conversations. And organising your day..."
                        android:layout_below="@+id/textAndroid"
                        android:layout_toRightOf="@+id/imgAndroid"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#323131"
                        android:letterSpacing="0.03"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/txtandroidbtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View Resources"
                        android:layout_below="@+id/txtDesc"
                        android:layout_marginTop="20dp"
                        android:layout_toRightOf="@+id/imgAndroid"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="@color/purple_700"
                        android:paddingRight="20dp"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFEB3B"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginTop="15dp"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/imgWeb"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@color/white"
                        android:src="@drawable/web"/>

                    <TextView
                        android:id="@+id/textWeb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Web Api Development"
                        android:layout_toRightOf="@+id/imgWeb"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:letterSpacing="0.03"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/txtDescWeb"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Web development is the work involved in developing a Web site for the Internet. There are three kinds of Web developer...."
                        android:layout_below="@+id/textWeb"
                        android:layout_toRightOf="@+id/imgWeb"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#323131"
                        android:letterSpacing="0.03"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/txtwebbtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View Resources"
                        android:layout_below="@+id/txtDescWeb"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/imgWeb"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="@color/purple_700"
                        android:paddingRight="20dp"/>

                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#7CF46E"
                app:cardCornerRadius="20dp"
                app:cardElevation="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginTop="15dp"
                    android:padding="15dp">

                    <ImageView
                        android:id="@+id/imgIot"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/iot"/>

                    <TextView
                        android:id="@+id/textIot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Interactive Pervasive Computing"
                        android:layout_toRightOf="@+id/imgIot"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:letterSpacing="0.03"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/txtDescIot"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/textIot"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@+id/imgIot"
                        android:letterSpacing="0.03"
                        android:text="The Internet of Things, or IoT for short, is about extending the power of the internet...."
                        android:textColor="#323131"
                        android:textSize="12sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txtiotbtn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="View Resources"
                        android:layout_below="@+id/txtDescIot"
                        android:layout_marginTop="15dp"
                        android:layout_toRightOf="@+id/imgIot"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:textSize="17sp"
                        android:textColor="@color/purple_700"
                        android:paddingRight="20dp"/>
                </RelativeLayout>
            </androidx.cardview.widget.CardView>
        </RelativeLayout>
    </LinearLayout>

</ScrollView>