<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#C3E5FF"
            app:cardCornerRadius="20dp"
            app:cardElevation="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/tvtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Android Development"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:letterSpacing="0.03"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tvcategories"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/category"
                    android:layout_below="@+id/tvtitle"
                    android:drawablePadding="12dp"
                    android:gravity="center_vertical"
                    android:text="Categories"
                    android:letterSpacing="0.03"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:layout_marginBottom="6dp"/>

                <TextView
                    android:id="@+id/tvdesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meet the OS that’s optimised for how you use your phone. Helping you to manage conversations. And organising your day..."
                    android:layout_below="@+id/tvcategories"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#323131"
                    android:letterSpacing="0.03"
                    android:layout_marginLeft="10dp"/>
                <TextView
                    android:id="@+id/fileeeee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="File: "
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/tvdesc"
                    android:textColor="#000000"
                    android:letterSpacing="0.03"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/tvFilename"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Meet the OS that’s optimised for how you use your phone."
                    android:textSize="18sp"
                    android:layout_marginTop="10dp"
                    android:layout_below="@+id/fileeeee"
                    android:textStyle="bold"
                    android:textColor="#0019FA"
                    android:letterSpacing="0.03"
                    android:layout_marginLeft="10dp"/>

                <TextView
                    android:id="@+id/txtpostdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="postdate"
                    android:layout_below="@+id/tvFilename"
                    android:gravity="end"
                    android:textSize="14sp"
                    android:layout_marginTop="10dp"
                    android:textColor="#4A4848" />
                <TextView
                    android:id="@+id/btnCupdate"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Update"
                    android:layout_below="@+id/txtpostdate"
                    android:layout_alignParentLeft="true"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/custom_inputfield"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/purple_700" />

                <TextView
                    android:id="@+id/btnCdelete"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:text="Delete"
                    android:layout_below="@+id/txtpostdate"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:background="@drawable/custom_inputfield"
                    android:textStyle="bold"
                    android:textSize="17sp"
                    android:textColor="#FF0000"/>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</LinearLayout>